{
    "compilerOptions": {
        "incremental": true,
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "baseUrl": "./src",
        "paths": {
            "@utils/*": ["./utils/*"],
            "~/*": ["./*"]
        }
    }
}
